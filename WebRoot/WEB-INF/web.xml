<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
<servlet>
	<servlet-name>user</servlet-name>
	<servlet-class>cn.zucc.controller.userinfoServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>user</servlet-name>
	<url-pattern>/user.do</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<servlet-name>user</servlet-name>
	<url-pattern>/login</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<servlet-name>user</servlet-name>
	<url-pattern>/register</url-pattern>
</servlet-mapping>
<servlet>
	<servlet-name>book</servlet-name>
	<servlet-class>cn.zucc.controller.bookServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>book</servlet-name>
	<url-pattern>/book.do</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<servlet-name>book</servlet-name>
	<url-pattern>/index</url-pattern>
</servlet-mapping>
<servlet>
	<servlet-name>item</servlet-name>
	<servlet-class>cn.zucc.controller.itemServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>item</servlet-name>
	<url-pattern>/item.do</url-pattern>
</servlet-mapping>
<servlet>
	<servlet-name>order</servlet-name>
	<servlet-class>cn.zucc.controller.orderServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>order</servlet-name>
	<url-pattern>/order.do</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>comment</servlet-name>
	<servlet-class>cn.zucc.controller.commentServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>comment</servlet-name>
	<url-pattern>/comment.do</url-pattern>
</servlet-mapping>

<filter>
  	<filter-name>filter</filter-name>
  	<filter-class>cn.zucc.filter.filter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>filter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
<filter>
  	<filter-name>s</filter-name>
  	<filter-class>cn.zucc.filter.UserFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>s</filter-name>
  	<url-pattern>*.do</url-pattern>
  </filter-mapping>
</web-app>
